<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LifestyleScoringApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FontSizeSmall" parent="Theme.LifestyleScoringApp">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="FontSizeMedium" parent="Theme.LifestyleScoringApp">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="FontSizeLarge" parent="Theme.LifestyleScoringApp">
        <item name="android:textSize">20sp</item>
    </style>
</resources>